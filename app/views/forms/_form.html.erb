<%= form_for(@form) do |f| %>
  <% if @form.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@form.errors.count, "error") %> prohibited this form from being saved:</h2>

      <ul>
      <% @form.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<div id="formbox">
  <div class="field">
    <%= f.label :project %><br>
      <select name="forms[project]">
      <option value="Tylenol">Tylenol</option>
      <option value="AMFAM" selected="selected">AMFAM</option>
      <option value="Nationwide">Nationwide</option>
      <option value="Home Goods">Home Goods</option>
      <option value="Gerber">Gerber</option>
</select>

  </div>
  <div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :union %><br>
    <%= f.check_box :union %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
</div>
<% end %>
